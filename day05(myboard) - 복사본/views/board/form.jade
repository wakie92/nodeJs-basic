doctype html
html
    head
        title 게시글글 #{data.title}
        script.
            function goList(){
                location.href ='/board';
            }
    body
     div(align ='center')
            br
            hr
            h2 게시판 상세 페이지
            hr
            br
            form(name = "wForm",method = 'post' action = '/#{data.url}' onsubmit = 'return checkForm()')
                table(border = '1', width = '80%')
                    tr
                        th(width = '25%') 제목
                        td
                            input(type = 'text' , name = 'title' value = board ? '#{board.title}' : '')
                    tr
                        th(width = '25%') 글쓴이
                        td
                            if(board)//수정필요
                                input(type = 'text', name  = 'writer' ) #{board.writer}
                            else
                                input(type = 'text', name  = 'writer' )
                    tr
                        th(width = '25%') 내용
                        td
                            if(board)
                                textarea(name = "content" cols = '50' rows = '5') #{board.content}
                            else
                                textarea(name = "content" cols = '50' rows = '5')
                                
                br  
                input(type = 'submit', value = '수정완료')
                input(type = 'button', value = '목록', onclick = 'goList()' )